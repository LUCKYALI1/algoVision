rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Allow anyone to read user profiles (for author names), 
    // but only the owner can write to their document.
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow authenticated users to create posts.
    // Anyone can read posts.
    // Only the author can update or delete their own posts.
    match /posts/{postId} {
      allow create: if request.auth != null;
      allow read: if true;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.authorId;

      // Allow authenticated users to create reviews on posts.
      // Anyone can read reviews on posts.
      // Only the author of the review can update or delete it.
      match /reviews/{reviewId} {
        allow create: if request.auth != null;
        allow read: if true;
        allow update, delete: if request.auth != null && request.auth.uid == resource.data.authorId;
      }
    }

    // Allow anyone to create reviews for the website.
    // Anyone can read reviews for the website.
    // Only the author of the review can update or delete it.
    match /website-reviews/{reviewId} {
        allow create: if true;
        allow read: if true;
        allow update, delete: if request.auth != null && request.auth.uid == resource.data.authorId;
    }

    // Allow authenticated users to create questions.
    // Anyone can read questions.
    // Only the author can update or delete their own questions.
    match /questions/{questionId} {
      allow create: if request.auth != null;
      allow read: if true;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.authorId;
    }

    // Allow anyone to read FAQs.
    // Writes are disabled for now.
    match /faq/{faqId} {
      allow read: if true;
      allow write: if false; 
    }
  }
}